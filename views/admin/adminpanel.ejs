            <!-- Default box -->
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Reservas recentes</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <strong>&#8722</strong>
                  </button>
                </div>
              </div>
              <div class="card-body">
                <% if(data[0]){ %>
